{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
	"contextMenus",
	"notifications"
  ],
  "web_accessible_respurces": [
	"icon.png"
  ],
  "background": {
	"scripts": ["sample.js"]
  },
  "icons": {
	"16": "icon.png",
	"48": "icon.png",
	"128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "pv show"
  }
}